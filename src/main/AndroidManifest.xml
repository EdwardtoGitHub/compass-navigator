<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.skawronek.compassnavigator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name=".NavigatorActivity"
            android:label="@string/title_activity_navigator"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddDestinationActivity"
            android:label="@string/title_activity_add_destination" >
        </activity>
        <activity
            android:name=".SelectDestinationActivity"
            android:label="@string/title_activity_select_destination" >
        </activity>
        <activity
            android:name=".DeleteDestinationsActivity"
            android:label="@string/title_activity_delete_destinations" >
        </activity>
    </application>

</manifest>
