<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_select_imgLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_destination" />

    <TextView
        android:id="@+id/item_select_lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/item_select_imgLocation"
        android:text="Berlin, fernsehturm"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_select_lblGeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_select_lblName"
        android:layout_alignParentBottom="false"
        android:layout_below="@id/item_select_lblName"
        android:layout_toRightOf="@+id/item_select_imgLocation"
        android:text="lat: 51, long: 13" />

</RelativeLayout>
